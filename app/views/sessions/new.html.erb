<div class="text-center">
  <h1>Login</h1>
  <div  class="col-lg-6">
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="text-center">
      テストユーザーとしてログインできます。
      <br>
      Email:testuser@sample.com, password:password
    </div>
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
    <% end %>

    <br>

    <%= link_to '/auth/twitter', class: "btn btn-social btn-twitter" do %>
      <span class="fa fa-twitter"></span> Twitterでログイン
    <% end %>

    <%= link_to '/auth/facebook', class: "btn btn-social btn-facebook" do %>
      <span class="fa fa-facebook"></span> Facebookでログイン
    <% end %>

    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>
