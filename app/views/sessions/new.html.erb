<div class="text-center">
  <h1>Login</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
    <% end %>

    <br>

    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.hidden_field :email, :value => 'myfavoritesong.testuser@gmail.com' %>
      <%= f.hidden_field :password, :value => 'test@user' %>
      <%= f.submit 'テストユーザーとしてログイン', class: 'btn btn-success btn-block' %>
    <% end %>

    <br>

    <%= link_to '/auth/twitter', class: "btn btn-social btn-twitter" do %>
      <span class="fa fa-twitter"></span> Twitterでログイン
    <% end %>

    <%= link_to '/auth/facebook', class: "btn btn-social btn-facebook" do %>
      <span class="fa fa-facebook"></span> Facebookでログイン
    <% end %>

    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>
