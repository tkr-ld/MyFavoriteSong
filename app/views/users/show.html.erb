<div class="row">
  <aside class="col-xs-12 col-md-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title font_lg"><strong><%= @user.name %></strong></h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= icon_url(@user, { size: 500 }) %>" alt=""> 
        <h4 class="inline-right">
          <%= link_to edit_user_path(@user),class: "link_hover_sm" do %>
            <span class="glyphicon glyphicon-cog"></span>
          <% end %>
        </h4>
      </div>
    </div>
  </aside>
  <div class="col-xs-12 col-md-4">
    <h3><strong><%= link_to 'Favorite Musician', favorites_user_path(@user),class: "link_hover" %><span class="badge"><%= @count_favorites %></span></strong></h3>
    <%= render 'musicians', musicians: @favorites %>
  </div>
  <div class="col-xs-12 col-md-5">
    <h3><strong><%= link_to 'Joined Live', joinlives_user_path(@user),class: "link_hover" %><span class="badge"><%= @count_joined %></strong></span></h3>
    <%= render 'setlists', setlists: @joinlives %>
  </div>
</div>
