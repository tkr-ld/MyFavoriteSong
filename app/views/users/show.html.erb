<div class="row">
  <aside class="col-xs-12 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.name %></h3>
      </div>
      <div class="panel-body">
          <img class="media-object img-rounded img-responsive" src="<%= icon_url(@user, { size: 500 }) %>" alt=""> 
      </div>
    </div>
  </aside>
      <div class="col-xs-12 col-md-6">
        <h3><%= link_to 'Favorite Musician', favorites_user_path(@user) %><span class="badge"><%= @count_favorites %></span></h3>
      <%= render 'musicians', musicians: @favorites %>
      </div>
      <div class="col-xs-12 col-md-6">
        <h3><%= link_to 'Joined Live', joinlives_user_path(@user) %><span class="badge"><%= @count_joined %></span></h3>
      <%= render 'setlists', setlists: @joinlives %>
      </div>
</div>
