<div class="row">
  <div class="col-xs-8">
    <ul>
      <li><%= @setlist.title %></li>
      <li><%= @musician.name %></li>
      <li><%= @setlist.date %></li>
      <li><%= @setlist.place %></li>
    </ul>
    
    <!--<%= form_for(@setlist.songs.build, url: add_song_setlist_path(@setlist), html: { method: :patch }) do |f| %>-->
    <!--    <%= f.number_field :order %>-->
    <!--    <%= f.text_field :title %>-->
        
