<% if logged_in? %>
  <% if current_user.joinning?(setlist) %>
    <%= form_for(current_user.setlist_relationships.find_by(setlist_id: setlist.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :setlist_id, setlist.id %>
      <%= f.submit 'Unjoin', class: 'btn btn-default btn-md' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.setlist_relationships.build) do |f| %>
      <%= hidden_field_tag :setlist_id, setlist.id %>
      <%= f.submit 'Join', class: 'btn btn-success btn-md' %>
    <% end %>
  <% end %>
<% end %>
