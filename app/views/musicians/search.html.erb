<div class="text-left page-header">
  <h2>Search Musician</h2>
</div>
<div class="form-inline">
<%= form_tag(musicians_path,:method => 'get') do %>
  <%= text_field_tag :search, '',class: 'form-control',placeholder: 'ミュージシャン名を入力' %>
  <%= button_tag( class: "btn btn-primary") do %>
    <%= content_tag :span, "Search", class: "glyphicon glyphicon-search" %>
  <% end %>
<% end %>
  </div>
<br>
<% if @musicians %>
  <table class="table">
  <tr>
    <th class="text-left">ミュージシャン名</th>
  </tr>
  <% @musicians.each do |musician| %>
    <tr class="text-left">
      <td><%= link_to musician_path(musician) do %> <span class=" glyphicon glyphicon-user"></span><%= musician.name%><% end %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <br>
  <%= link_to new_musician_path, class: 'btn btn-default' do %> <span class=" glyphicon glyphicon-plus"></span>Add Musician<% end %>
<% end %>